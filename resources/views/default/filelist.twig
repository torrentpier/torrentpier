<h1 class="pagetitle">{{ PAGE_TITLE }}</h1>
<ul>
    <li>{{ __('BT_FLIST_CREATION_DATE') }}: <b>{{ TORRENT_CREATION_DATE }}</b></li>
    <li>{{ __('DL_CLIENT') }}: <b>{{ TORRENT_CLIENT }}</b></li>
    <li>{{ __('BT_IS_PRIVATE') }}: <b>{{ TORRENT_PRIVATE }}</b></li>
</ul>
<br/>

<h1 class="pagetitle">{{ __('BT_FLIST') }}</h1>
<table class="forumline">
    <thead>
    <tr>
        <th>#</th>
        <th>{{ FILES_COUNT }}</th>
        <th>{{ __('SIZE') }}</th>
        <th>{{ __('BT_FLIST_BTMR_HASH') }}</th>
    </tr>
    </thead>
    {% for item in FILELIST %}
    <tbody>
    <tr class="{{ item.ROW_CLASS }} tCenter">
        <td>{{ item.ROW_NUMBER }}</td>
        <td>{{ item.FILE_PATH }}</td>
        <td>{{ item.FILE_LENGTH }}</td>
        <td><span class="copyElement" data-clipboard-text="{{ item.FILE_HASH }}" title="{{ __('COPY_TO_CLIPBOARD') }}">{{ item.FILE_HASH }}</span></td>
    </tr>
    </tbody>
    {% endfor %}{# /FILELIST #}
    <tfoot>
    <tr>
        <td class="catBottom warnColor1" colspan="4">{{ BTMR_NOTICE|raw }}</td>
    </tr>
    </tfoot>
</table>

<!--bottom_info-->
<div class="bottom_info">
    <div class="spacer_8"></div>
    <a href="{{ U_TOPIC }}">{{ __('TOPIC_RETURN') }}</a>
    <div id="timezone">
        <p>{{ CURRENT_TIME }}</p>
        <p>{{ S_TIMEZONE }}</p>
    </div>
    <div class="clear"></div>
</div><!--/bottom_info-->
