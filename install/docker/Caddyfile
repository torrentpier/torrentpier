# Caddy configuration for TorrentPier (Docker)
# Web root is /app/public

{$TP_HOST} {
    root * /app/public
    encode gzip zstd
    php_server
    try_files {path} {path}/ /index.php?{query}
    file_server

    # Block access to parent directories and hidden files
    @blocked {
        path /..
        path /.ht* /.en* /.git* /.docker*
    }
    respond @blocked 404

    # Sitemap is in parent directory
    redir /sitemap.xml ../sitemap/sitemap.xml 301

    # Static file caching
    @static {
        path *.css *.js *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.webp *.avif
    }
    header @static Cache-Control "public, max-age=2592000, immutable"

    log {
        output stdout
        format console
        level INFO
    }
}
