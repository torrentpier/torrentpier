<torrentpier>
  <plugin>
    <!-- Meta information -->
    <meta>
      <name>Plugin Name</name>
      <author>Plugin Author</author>
      <version>v1.0.0</version>
      <homepage>https://example.com</homepage>
      <!--
      tag: compatibility
      supported values:
      - v2.4.5
      - v2.4.*
      - v2.4.5, v2.4.6, ...
      -->
      <compatibility>v2.4.5</compatibility>
    </meta>
    <!-- Installation steps -->
    <steps>
      <action open="path/to/file">
        <find>
          <code><![CDATA[
            Code that should be found in the file
          ]]></code>
        </find>
        <!--
        tag: position
        attributes: after, before, inline, replace, remove
        -->
        <position type="after">
          <code><![CDATA[
            The code with which the found code will be replaced
          ]]></code>
        </position>
      </action>
    </steps>
  </plugin>
</torrentpier>
