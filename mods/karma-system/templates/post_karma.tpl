<!-- Karma voting buttons for posts -->
<div class="karma-buttons" data-user-id="{POST_USER_ID}">
    <button
        class="karma-vote-btn karma-upvote {UPVOTED}"
        data-vote="1"
        data-user-id="{POST_USER_ID}"
        title="{L_UPVOTE}"
        aria-label="{L_UPVOTE}">
        <span class="karma-icon">{ICON_UPVOTE}</span>
        <span class="karma-label">{L_UPVOTE}</span>
    </button>

    <button
        class="karma-vote-btn karma-downvote {DOWNVOTED}"
        data-vote="-1"
        data-user-id="{POST_USER_ID}"
        title="{L_DOWNVOTE}"
        aria-label="{L_DOWNVOTE}">
        <span class="karma-icon">{ICON_DOWNVOTE}</span>
        <span class="karma-label">{L_DOWNVOTE}</span>
    </button>
</div>
