<!-- Karma display in user profile -->
<div class="profile-karma">
    <h3>{L_KARMA}</h3>
    <div class="karma-stats">
        <div class="karma-stat">
            <span class="karma-label">{L_TOTAL_KARMA}:</span>
            <span class="karma-value karma-points">{KARMA_POINTS}</span>
        </div>
        <div class="karma-stat">
            <span class="karma-label">{L_POSITIVE}:</span>
            <span class="karma-value karma-positive">+{POSITIVE_VOTES}</span>
        </div>
        <div class="karma-stat">
            <span class="karma-label">{L_NEGATIVE}:</span>
            <span class="karma-value karma-negative">-{NEGATIVE_VOTES}</span>
        </div>
    </div>
</div>
