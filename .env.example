# Common params
TP_HOST=example.com
TP_PORT=80
APP_ENV=production
APP_DEBUG=false

# Cron settings
# false = Use external cron (system crontab calling 'php bull cron:run')
# true  = Use TorrentPier cron manager (built-in, no external cron needed)
APP_CRON_ENABLED=true

# Database credentials
# For Docker: set DB_HOST=database, DB_USERNAME=torrentpier
# For local: set DB_HOST=localhost or 127.0.0.1
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=torrentpier
DB_USERNAME=torrentpier
DB_PASSWORD=secret

# Docker-only: Root password for database initialization
DB_ROOT_PASSWORD=rootsecret

# Cache driver (file, memcached, redis)
CACHE_DRIVER=file

# Memcached (for Docker use container name 'memcached', for local use 'localhost' or '127.0.0.1')
MEMCACHED_HOST=127.0.0.1
MEMCACHED_PORT=11211

# Redis (optional, if using redis cache, for Docker use container name 'redis', for local use 'localhost' or '127.0.0.1')
#REDIS_HOST=127.0.0.1
#REDIS_PORT=6379
#REDIS_PASSWORD=
#REDIS_DB=0

# Mail settings
MAIL_SMTP_ENABLED=false
MAIL_HOST=localhost
MAIL_PORT=25
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS=
MAIL_BOUNCE_ADDRESS=
MAIL_ADMIN_ADDRESS=
MAIL_ABUSE_ADDRESS=
MAIL_ADVERT_ADDRESS=

# Telegram notifications (optional)
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# TorrServer integration (optional)
TORRSERVER_ENABLED=false
TORRSERVER_URL=http://localhost:8090

# Cookies
COOKIE_SECURE=false
COOKIE_DOMAIN=

# Two-Factor Authentication (required for 2FA)
# Generate with: php -r "echo base64_encode(random_bytes(32));"
TOTP_ENCRYPTION_KEY=

# IP geolocation (optional)
IP2COUNTRY_TOKEN=
WHOIS_INFO_URL=https://whatismyipaddress.com/ip/

# Misc
TIDY_POST_ENABLED=false

# Marketplace / Modifications (optional, defaults work out of the box)
#MARKETPLACE_API_URL=https://torrentpier.com/api
#MARKETPLACE_API_KEY=

# Bug tracking (optional)
BUGSNAG_API_KEY=
