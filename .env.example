# Common params
TP_HOST=example.com
TP_PORT=80
APP_ENV=production
APP_DEBUG=false

# Cron settings
# false = Use external cron (system crontab calling 'php bull cron:run')
# true  = Use TorrentPier cron manager (built-in, no external cron needed)
APP_CRON_ENABLED=true

# Database credentials
# For Docker: use service names ('database', 'redis', 'memcached')
# For local: use 'localhost' or '127.0.0.1'
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=torrentpier
DB_USERNAME=root
DB_PASSWORD=secret

# Docker-only: Root password for database initialization
# Only needed when using docker-compose.yml
DB_ROOT_PASSWORD=rootsecret

# Cache drivers (Redis/Memcached)
# For Docker: use service names ('redis', 'memcached')
# For local: use 'localhost' or '127.0.0.1'
REDIS_HOST=localhost
REDIS_PORT=6379
MEMCACHED_HOST=localhost
MEMCACHED_PORT=11211
